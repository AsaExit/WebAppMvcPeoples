@model List<City>
@{
    ViewData["Title"] = "City Index";
}

<h1>City list</h1>
<a asp-action="Create" class="btn btn-primary mt-4 mb-4">Add new city</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>City</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (City city in Model)
        {
            <tr>
                <td>@city.CityId</td>
                <td>@city.CityName</td>
                <td>@city.Country.CountryName</td>
                <td>
                    <a asp-action="Edit" asp-controller="City" asp-route-id="@city.CityId" class="mr-4 text-warning">Edit</a>

                    <a asp-action="Delete" asp-controller="City" asp-route-id="@city.CityId" class="mr-4 text-danger">Delete </a>
                </td>


            </tr>
        }
    </tbody>
</table>

